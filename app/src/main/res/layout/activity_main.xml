<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ittepic.edu.mx.calculadora.MainActivity">

    <Button
        android:id="@+id/btn_1"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimaryDark"
        android:text="1"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_0"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimaryDark"
        android:text="3"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_6"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_2"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimaryDark"
        android:text="2"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_1"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimaryDark"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_eq"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt_value"
        android:layout_width="339dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:textAlignment="viewEnd"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimaryDark"
        android:text="7"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_mul"
        app:layout_constraintRight_toLeftOf="@+id/btn_sign"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimaryDark"
        android:text="4"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintRight_toLeftOf="@+id/btn_eq"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimaryDark"
        android:text="6"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_9"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_5"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimaryDark"
        android:text="5"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_8"
        app:layout_constraintRight_toLeftOf="@+id/btn_4"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btn_eq"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@android:color/holo_orange_dark"
        android:text="="
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_mul"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@android:color/background_dark"
        android:text="*"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_value"
        app:layout_constraintRight_toLeftOf="@+id/btn_div"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@android:color/background_dark"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_value"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_minus"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@android:color/background_dark"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_value"
        app:layout_constraintRight_toLeftOf="@+id/btn_mul"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btn_div"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@android:color/background_dark"
        android:text="/"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_value"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimaryDark"
        android:text="8"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_minus"
        app:layout_constraintRight_toLeftOf="@+id/btn_7"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@android:color/background_dark"
        android:text="+/-"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_div"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:background="@color/colorPrimaryDark"
        android:text="9"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_plus"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_8"
        android:layout_marginRight="8dp" />
</android.support.constraint.ConstraintLayout>
